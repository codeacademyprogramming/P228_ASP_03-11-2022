@model Group
@{
    ViewData["Title"] = "Detail";
}

<h1>Detail</h1>
<p>@Model.Id</p>
<p>@Model.Name</p>
<p>@Model.Limit</p>
@if (Model.Students != null && Model.Students.Count > 0)
{
    foreach (Student student in Model.Students)
    {
        <p>
            <a asp-controller="home" asp-action="StuDetail">FullName: @student.Name @student.SurName </a>
        </p>
    }
}